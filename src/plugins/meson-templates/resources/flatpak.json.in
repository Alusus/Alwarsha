{
    "app-id" : "{{appid}}",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "@gnome_sdk_version@",
    "sdk" : "org.gnome.Sdk",
{{if language == "rust"}}
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
{{end}}
    "command" : "{{exec_name}}",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
{{if (template == "gnome-app-gtk4") || (template == "gnome-app-adwaita")}}
        "--device=dri",
{{endif}}
        "--socket=wayland"
    ],
{{if language == "rust"}}
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "{{name}}=debug"
        }
    },
{{end}}
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
{{if language == "vala"}}
        "/share/vala",
{{end}}
        "*.la",
        "*.a"
    ],
    "modules" : [
{{if template == "gnome-app"}}
{{if language == "c++"}}
        {
           "name" : "mm-common",
           "buildsystem" : "meson",
           "sources" : [
               {
                   "type" : "git",
                   "url" : "https://gitlab.gnome.org/GNOME/mm-common.git",
                   "tag" : "1.0.4"
               }
           ]
        },
        {
            "name" : "sigc++",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libsigcplusplus/libsigcplusplus.git",
                    "tag" : "3.2.0"
                }
            ]
        },
        {
            "name" : "glibmm",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/glibmm.git",
                    "tag" : "2.70.0"
                }
            ]
        },
        {
            "name" : "cairomm",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/freedesktop/cairomm.git",
                    "tag" : ""
                }
            ]
        },
        {
            "name" : "pangomm",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/pangomm.git",
                    "tag" : "2.50.0"
                }
            ]
        },
        {
            "name" : "atkmm",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/atkmm.git",
                    "tag" : "2.36.1"
                }
            ]
        },
        {
            "name" : "gtkmm",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtkmm.git",
                    "tag" : "3.24.5"
                }
            ]
        },
{{end}}
{{end}}
        {
            "name" : "{{name}}",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file://{{project_path}}"
                }
            ]
        }
    ]
}
